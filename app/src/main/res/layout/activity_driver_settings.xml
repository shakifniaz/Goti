<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg7"
    tools:context=".CustomerSettingsActivity">

    <!-- Top Title Bar -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border5"
        android:text="Driver Profile"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:padding="9dp"
        android:gravity="center"
        android:textAlignment="center" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="788dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp">

        <!-- Overlapping Circular Image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/card_bg2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="92dp"
            android:paddingBottom="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Name : "
                    android:textColor="@color/new_color"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="240dp"
                    android:layout_height="43dp"
                    android:background="@drawable/border4"
                    android:hint="Your Name"
                    android:paddingLeft="16dp"
                    android:textColor="@color/new_color"
                    android:textColorHint="@color/new_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Phone : "
                    android:textColor="@color/new_color"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="240dp"
                    android:layout_height="43dp"
                    android:background="@drawable/border4"
                    android:hint="Your Phone Number"
                    android:inputType="number"
                    android:paddingLeft="16dp"
                    android:textColor="@color/new_color"
                    android:textColorHint="@color/new_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Car : "
                    android:textColor="@color/new_color"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/car"
                    android:layout_width="240dp"
                    android:layout_height="43dp"
                    android:background="@drawable/border4"
                    android:hint="Your Car"
                    android:paddingLeft="16dp"
                    android:textColor="@color/new_color"
                    android:textColorHint="@color/new_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Licence : "
                    android:textColor="@color/new_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/licence_driver"
                    android:layout_width="240dp"
                    android:layout_height="43dp"
                    android:background="@drawable/border4"
                    android:gravity="center_vertical"
                    android:hint="Your Licence Number"
                    android:paddingLeft="16dp"
                    android:textColor="@color/new_color"
                    android:textColorHint="@color/new_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/GotiX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border4"
                    android:buttonTint="@color/new_color"
                    android:drawableTop="@drawable/cng_resized"
                    android:padding="10dp"
                    android:text="CNG"
                    android:textColor="@color/new_color"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/GotiBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/border4"
                    android:buttonTint="@color/new_color"
                    android:drawableTop="@drawable/bike_resized"
                    android:padding="10dp"
                    android:text="BIKE"
                    android:textColor="@color/new_color"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/GotiXl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border4"
                    android:buttonTint="@color/new_color"
                    android:drawableTop="@drawable/car_resized"
                    android:padding="10dp"
                    android:text="CAR"
                    android:textColor="@color/new_color"
                    android:textSize="15dp" />
            </RadioGroup>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border3"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Back"
                    android:textColor="@color/new_color"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/confirm"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Confirm"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:src="@drawable/baseline_account_circle_24" />
    </FrameLayout>
</LinearLayout>